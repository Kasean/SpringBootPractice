<configuration>
    <springProfile name="default,task1">
        <property name="LOG_FILE" value="logs/task1.log" />

        <appender name="FILE" class="ch.qos.logback.core.FileAppender">
            <file>${LOG_FILE}</file>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} -%msg%n</pattern>
            </encoder>
        </appender>

        <logger name="TASK_1_SIMPLE_LOGGER" level="DEBUG"/>
        <root level="INFO">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

</configuration>